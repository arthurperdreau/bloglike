{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="border border-secondary rounded p-3 mb-4">
            <p class="fw-bolder">By {{ post.author.email }}</p>
            <h3 class="mb-2">{{ post.title }}</h3>
            <p class="text-muted">{{ post.content }}</p>
            <a class="btn btn-primary" href="{{ path('show_post', {id:post.id}) }}">See</a>
            <a href="{{ path('app_like_post', {id:post.id}) }}" class="btn btn-primary">ğŸ‘/ğŸ‘</a>
            <p><strong>Likes : {{ post.likes|length }}</strong></p>
        </div>
    {% endfor %}
{% endblock %}
