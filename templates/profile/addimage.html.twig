{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Ajouter une image de profil{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex flex-column align-items-center">
        <h2 class="mb-4 text-center">Gestion de l'image de profil</h2>

        {% if app.user.profile.picture %}
            <div class="card mb-4" style="width: 18rem;">
                <img class="card-img-top" src="{{ vich_uploader_asset(app.user.profile.picture, 'imageFile') }}" alt="Image de profil">
                <div class="card-body text-center">
                    <a class="btn btn-danger" href="{{ path('add_removepictureprofile', {id: app.user.profile.picture.id}) }}">
                        Supprimer l'image
                    </a>
                </div>
            </div>
        {% endif %}

        <div class="card p-4 mb-4 w-100" style="max-width: 500px;">
            <h5 class="text-center mb-3">Ajouter une nouvelle image</h5>
            {{ form_start(form) }}
            {{ form_row(form.imageFile) }}
            <div class="text-center">
                <button type="submit" class="btn btn-success mt-2">Ajouter</button>
            </div>
            {{ form_end(form) }}
        </div>

        <a href="{{ path('see_profile', {id: app.user.profile.id}) }}" class="btn btn-secondary mt-2">
            ‚Üê Retour au profil
        </a>
    </div>
{% endblock %}
